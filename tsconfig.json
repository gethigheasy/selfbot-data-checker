{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "build",
    "emitDeclarationOnly": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": "./src",
    "paths": {
      "#client": ["./client/index.ts"],
      "#types": ["./types/index.ts"],
      "#utils": ["./utils/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "deprecated", "dist", "build"],
}